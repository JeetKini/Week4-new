@model VidlysProject.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "CustomerForm";
}

<h2>New Customer</h2>
@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "DurationInMonths"), "Select MemberShipType", new { @class = "form-control" })
    </div>
    <br />
    <div class="checkbox">
        @Html.CheckBoxFor(m => m.Customer.IsSuscribedToNewsletter)Subscribe to News Letter?
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Save</button>
}
